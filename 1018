#include <iostream>

using namespace std;

int main(){
    int N;
    
    cin >> N;
    
    cout << N <<"\n";
    cout << N/100 << " nota(s) de R$ 100,00\n";
    N = (N%100);
    cout << N/50 << " nota(s) de R$ 50,00\n";
    N = (N%50);
    cout << N/20 << " nota(s) de R$ 20,00\n";
    N = (N%20);
    cout << N/10 << " nota(s) de R$ 10,00\n";
    N = (N%10);
    cout << N/5 << " nota(s) de R$ 5,00\n";
    N = (N%5);
    cout << N/2 << " nota(s) de R$ 2,00\n";
    N = (N%2);
    cout << N/1 << " nota(s) de R$ 1,00\n";
    return 0;
}
